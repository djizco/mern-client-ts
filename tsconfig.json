{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "_client/*": ["client/*"],
      "_api/*": ["client/api/*"],
      "_components/*": ["client/components/*"],
      "_store/*": ["client/store/*"],
      "_styles/*": ["client/styles/*"],
      "_hooks/*": ["client/hooks/*"],
      "_utils/*": ["client/utils/*"],
      "_types/*": ["client/types/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["client", "config", ".eslintrc.js"]
}
